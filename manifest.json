{
  "required_api_version": "^2.0.0",
  "name": "Baloo File Search",
  "description": "Search files using Baloo",
  "developer_name": "Dominic Hock (d.hock@it-hock.de)",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 0.05
  },
  "preferences": [
    {
      "id": "baloo_search",
      "type": "keyword",
      "name": "Baloo search",
      "default_value": "bs"
    },
    {
      "id": "baloo_executable",
      "type": "input",
      "name": "Baloo executable",
      "description": "Sets the executable to use for Baloo indexing. Leave empty to try to auto-detect.",
      "default_value": ""
    }
  ]
}
